{
  "extends": "../../tsconfig.base.json",
  "include": ["."],
  "compilerOptions": {    
    "baseUrl": ".",
    "paths": {
      "~contexts/*": ["./contexts/*"],
      "~shared/*": ["./shared/*"],
    },
    "jsx": "react-jsx",
    "allowJs": true,    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "module": "esnext",    

    "outDir": "./dist", // ← Add output directory
    // "declaration": true // ← Generate .d.ts files
  },  
  "exclude": ["dist", "node_modules"]
}

