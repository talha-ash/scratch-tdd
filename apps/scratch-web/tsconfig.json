{
  "extends": "../../tsconfig.base.json",
  // "include": ["**/*.ts", "**/*.tsx", "eslint.config.js", "prettier.config.js", "vite.config.js"],
  // need to tell the typescript compiler where to find the types for cypress
  "include": ["src/**/*"],
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "composite": true,
    "types": ["vite/client", "cypress"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~cypress/*": ["./cypress/*"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx"],
  "references": [{ "path": "./tsconfig.test.json" }]
}
