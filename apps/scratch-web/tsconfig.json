{
  "extends": "../../tsconfig.base.json",
  // "include": ["**/*.ts", "**/*.tsx", "eslint.config.js", "prettier.config.js", "vite.config.js"],
  // need to tell the typescript compiler where to find the types for cypress
  "include": ["src/**/*", "cypress"],
  "compilerOptions": {
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~cypress/*": ["./cypress/*"]
    }
  }
  // "references": [{ "path": "./tsconfig.node.json" }],
}
